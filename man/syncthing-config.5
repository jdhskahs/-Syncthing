        <address>dynamic</address>
    </device>
    <gui enabled="true" tls="true">
        <address>127.0.0.1:54096</address>
        <user>jb</user>
        <password>$2a$10$EKaTIcpz2...</password>
        <apikey>O80CDOJ9LVUVCMHFK2OJDO4T882735</apikey>
